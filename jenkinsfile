        stage('docker build') {
            steps {
                echo "Starting Docker Build Stage..."
                sh 'docker build -t my-node-app .'
                echo "Docker Build stage completed successfully!"
            }
        }
        stage('Push to ECR') {
    steps {
        withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'ecr-creds']]) {
            sh """
                aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 850550315147.dkr.ecr.us-east-1.amazonaws.com
                docker tag my-node-app:latest 850550315147.dkr.ecr.us-east-1.amazonaws.com/node.js-task:latest
                docker push 850550315147.dkr.ecr.us-east-1.amazonaws.com/node.js-task:latest
            """
        }
    }
}


    }

    post {
        success {
            echo "Pipeline succeeded."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
