pipeline {
    agent any

    stages {
        // Build stage
        stage('Build') {
            steps {
                echo "Starting Build Stage..."
                sh 'npm install'
                echo "Build stage completed successfully!"
            }
        }

        // SonarCloud Analysis stage 
        /*
