pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "Starting Node.js build..."
                
                // Optional: check versions
                sh 'node -v'
                sh 'npm -v'
                
                // Install dependencies
                sh 'npm install'
                
                
                // Build project
                sh 'npm run build'
            }
        }
    }

    post {
        success {
            echo "Build completed successfully!"
        }
        failure {
            echo "Build failed!"
        }
    }
}
